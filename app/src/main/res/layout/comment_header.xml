<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <TextView
        android:id="@+id/tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是一个标题"
        android:textSize="20sp"
        android:textColor="#666666"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="12dp"
        android:letterSpacing="0.1"
        android:layout_marginHorizontal="24dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_marginHorizontal="12dp">

            <ImageView
                android:id="@+id/details_photo"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp" />
            <TextView
                android:id="@+id/details_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/details_photo"
                android:layout_marginTop="13dp"
                android:layout_marginStart="12dp"
                android:text="我是作者"
                android:textColor="#666666"
                android:padding="3dp"
                android:layout_toStartOf="@id/details_btn"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/details_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="13dp"
                android:layout_toLeftOf="@id/details_btn"
                android:layout_toEndOf="@id/details_photo"
                android:maxLines="1"
                android:padding="3dp"
                android:text="啊实打实的发给哈桑顶顶顶顶顶顶顶顶顶顶"
                android:textSize="12sp" />

            <Button
                android:id="@+id/details_btn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:text="关注"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:letterSpacing="0.5"
                android:background="@drawable/btn_focus_fill"/>

        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"/>
        <TextView
            android:id="@+id/details_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            android:text="d\tvbbbb \t\n hhhhhhhhhh\n gggggggggggggggggg\nggggggggggggg"
            android:textSize="17sp"
            android:letterSpacing="0.1" />


    <com.example.tools.tools.MyGridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:layout_marginTop="24dp"
        android:numColumns="auto_fit"
        android:layout_marginHorizontal="24dp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />


</LinearLayout>
